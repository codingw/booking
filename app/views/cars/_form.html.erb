<%= form_for(@car) do |f| %>
  <% if @car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
      <% @car.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :police_number %><br>
    <%= f.text_field :police_number %>
  </div>
  <div class="field">
    <%= f.label :merk %><br>
    <%= f.text_field :merk %>
  </div>
  <div class="field">
    <%= f.label :capacity %><br>
    <%= f.number_field :capacity %>
  </div>
  <div class="field">
    <%= f.label :driver_id %><br>
    <%= f.select :driver_id, User.where(level_id: 5).collect {|driver| [ driver.name, driver.id ] } %>
  </div>
  <div class="actions">
    <%= f.submit 'Save', class: 'btn btn-success' %>
    <%= link_to 'Back', cars_path, class: 'btn btn-success' %>
  </div>
<% end %>
