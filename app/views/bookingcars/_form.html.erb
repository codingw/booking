<%= form_for(@bookingcar, class: 'form-horizontal') do |f| %>
  <% if @bookingcar.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bookingcar.errors.count, "error") %> prohibited this bookingcar from being saved:</h2>

      <ul>
      <% @bookingcar.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :car_id %><br>
    <%= f.select :car_id, Car.all.collect {|car| [ car.police_number, car.id ] } %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.select :user_id, User.where(level_id: 3).collect {|user| [ user.name, user.id ] } %>
  </div>
  <div class="field">
    <%= f.label :destination %><br>
    <%= f.text_field :destination %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :start_time %><br>
    <%= f.datetime_select :start_time %>
  </div>
  <div class="field">
    <%= f.label :end_time %><br>
    <%= f.datetime_select :end_time %>
  </div>
  <div class="field">
    <%= f.label :participant %><br>
    <%= f.number_field :participant %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.number_field :status %>
  </div>
  <div class="actions">
    <%= f.submit 'Save', class: 'btn btn-info' %>
    <%= link_to 'Back', bookingcars_path, class: 'btn btn-warning' %>
  </div>
<% end %>
